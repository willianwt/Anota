<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AdicionarResumoComFotoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAdcResumoComFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTituloResumoComFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TÃ­tulo" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/imgAdicionarResumoComFoto"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/padrao" />

            <Button
                android:id="@+id/btSalvarComFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_blue"
                android:text="Salvar" />
        </LinearLayout>
</ScrollView>